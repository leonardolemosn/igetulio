<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('../partials/head') %>
  <link type="text/css" rel="stylesheet" href="css/style.css" />
</head>

<body>
  <%- include ('../partials/header-login') %>

  <main class="container">

    <div class="">
      <div class="row">
        <a class="btn-floating btn-large waves-effect waves-light green" href="/home">
          <i class="large material-icons">keyboard_backspace</i>
        </a>
        <div class="col s12 m12">
          <div class="row">
            <div class="card-panel">
              <div class="input-field">
                <a href="/sale/register">
                  <button class="btn waves-effect waves-light">Registrar Oferta</button>
                </a>
              </div>
            </div>
            &nbsp;
            <% sales.docs.forEach(function(sale){ %>
              <%- include('../partials/sale-card', {sale: sale}); %>
            <% }); %>

            <div class="card-panel col s12 m12 center">
              <ul class="pagination">
                <li class="waves-effect <%= sales.hasPrevPage ? '': 'disabled'%>"><a href="<%=sales.hasPrevPage ? `?page=${sales.prevPage}` : '/home' %>"><i class="material-icons">chevron_left</i></a></li>
                <% (new Array(sales.totalPages)).fill(undefined).forEach(function (page, idx) {%>
                  <li class="<%= sales.page === idx + 1 ? 'active blue-grey': ''%>"><a href="?page=<%=idx+1%>"><%=idx + 1%></a></li>
                <%});%>
                <li class="waves-effect <%= sales.hasNextPage ? '': 'disabled'%>"><a href="<%=sales.hasNextPage ? `?page=${sales.nextPage}` : `` %>"><i class="material-icons">chevron_right</i></a></li>
              </ul>
            </div>

          </div>

        </div>
      </div>

    </div>

  </main>

  <%- include ('../partials/footer') %>

</body>

</html>