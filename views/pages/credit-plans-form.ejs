<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('../partials/head') %>
  <link type="text/css" rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <%- include ('../partials/header-login', {user: user}) %>

  <main class="container">
    <div class="row">
      <div class="col s3 offset-s3">
        <a class="btn-floating btn-large waves-effect waves-light green" href="/credit-plans">
          <i class="large material-icons">keyboard_backspace</i>
        </a>
      </div>
    </div>
    <div id="login-page" class="row">
      <div class="col s12 m6 offset-m6 l6 offset-l3 z-depth-1 card-panel hoverable">
        <form class="login-form" action="<%= !isUpdate ? '/credit-plans' : '/credit-plans/' + plan.id %>" method="POST">
          <div class="row">
            <div class="col s12 center">
              <img src="images/logo-positivo-small.png" alt="" class="circle responsive-img valign profile-image-login">
            </div>
            <div class="col s10 offset-s1 m10 offset-m1 ">
              <div class="input-field">
                <i class="material-icons prefix">assignment</i>
                <input id="name" name="name" type="text" required  value="<%=plan.name%>">
                <label for="name">Nome do plano</label>
              </div>
              <div class="input-field">
                <i class="material-icons prefix">article</i>
                <input id="description" name="description" type="text" required  value="<%=plan.description%>">
                <label for="description">Descrição do plano</label>
              </div>
              <div class="input-field">
                <i class="material-icons prefix">attach_money</i>
                <input id="price" name="price" type="number" step="0.01" required  value="<%=plan.price%>">
                <label for="price">Preço do plano</label>
              </div>
              <div class="input-field">
                <i class="material-icons prefix">pages</i>
                <input id="quantity" name="quantity" type="number" required value="<%=plan.quantity%>">
                <label for="quantity">Quantidade de páginas oferecidas pelo plano</label>
              </div>
              <div class="input-field">
                <button class="btn waves-effect waves-light col s12">Salvar</button>&nbsp;
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>


  <%- include('../partials/footer') %>

  <% if (error) { %>
    <script>M.toast({ html: "<%= error %>" });</script>
  <% } %>

</body>

</html>